                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/line"
                    android:layout_below="@id/text12"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>

            <LinearLayout
