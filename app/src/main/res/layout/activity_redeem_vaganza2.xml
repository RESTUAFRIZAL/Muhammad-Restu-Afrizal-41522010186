                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/relative1">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserratsemibold"
