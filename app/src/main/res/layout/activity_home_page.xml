<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_home">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/foto_profil" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="150dp"
                android:layout_toEndOf="@+id/imageView9"
                android:layout_marginTop="85dp"
                android:text="Selamat Pagi"
                android:textSize="20dp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="150dp"
                android:layout_toEndOf="@+id/imageView9"
                android:text="Olivia Gabrielle"
                android:textSize="20dp"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_toEndOf="@+id/imageView9"
                android:text="olivia.gabrielle@gmail.com"
                android:layout_marginStart="20dp"
                android:textSize="11dp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_side_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back_login"
                android:drawableStart="@drawable/menuuuu"
                android:layout_toRightOf="@id/text2"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="50dp"
                android:paddingLeft="7dp"/>

            <HorizontalScrollView
                android:id="@+id/horizontalview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:foregroundGravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/horz1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/horizontal1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"/>

                    <RelativeLayout
                        android:id="@+id/relative2"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/horz1"
                        android:background="@drawable/bg_horz2"
                        android:onClick="scanbarcode">

                        <View
                            android:id="@+id/tutupbtl"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="26dp"
                            android:layout_marginTop="51dp"
                            android:background="@drawable/tutupbtl_scan" />

                        <View
                            android:id="@+id/rectangel1"
                            android:layout_width="72dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="124dp"
                            android:layout_marginTop="59dp"
                            android:background="#1A529D"/>

                        <View
                            android:id="@+id/rectangle2"
                            android:layout_width="120dp"
                            android:layout_height="15dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="124dp"
                            android:layout_below="@id/text_scan3"
                            android:background="#1A529D"
                            />

                        <TextView
                            android:id="@+id/text_scan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="57dp"
                            android:layout_marginLeft="127dp"
                            android:textSize="12dp"
                            android:text="@string/scan_code"
                            android:textAppearance="@style/scan_kode" />

                        <TextView
                            android:id="@+id/text_scan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/text_scan1"
                            android:layout_marginTop="58dp"
                            android:layout_marginLeft="3dp"
                            android:textSize="12dp"
                            android:text="@string/dibalik"
                            android:textAppearance="@style/dibalik" />

                        <TextView
                            android:id="@+id/text_scan3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_scan1"
                            android:layout_marginLeft="127dp"
                            android:textSize="13dp"
                            android:text="@string/tutup"
                            android:textAppearance="@style/dibalik"/>

                        <TextView
                            android:id="@+id/text_scan4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="@string/tukarkan"
                            android:layout_marginLeft="127dp"
                            android:layout_marginTop="89dp"
                            android:textAppearance="@style/scan_kode"/>

                        <TextView
                            android:id="@+id/text_scan5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="@string/menarik"
                            android:layout_marginLeft="127dp"
                            android:layout_marginTop="105dp"
                            android:textAppearance="@style/dibalik"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/relative2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/horizontal3"/>

                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="368dp"
                android:layout_height="258dp"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/bg_raisa">

                <TextView
                    android:id="@+id/text_raisa1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Tutup Botol"
                    android:fontFamily="@font/montserratbold"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="17dp"/>

                <TextView
                    android:id="@+id/text_raisa2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temukan kode"
                    android:fontFamily="@font/montserratbold"
                    android:textSize="11dp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="62dp"/>

                <TextView
                    android:id="@+id/text_raisa3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dibalik tutup botol"
                    android:fontFamily="@font/montserratmedium"
                    android:textSize="11dp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="74dp"/>

                <TextView
                    android:id="@+id/text_raisa4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raisa\nAdriana"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="9dp"
                    android:textColor="#1A529D"
                    android:layout_below="@id/text_raisa3"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="34dp"/>

                <Button
                    android:id="@id/btnscan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scan_botol"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="130dp"/>

                <TextView
                    android:id="@+id/texttutupbotol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/btnscan"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="105dp"
                    android:fontFamily="@font/montserratmedium"
                    android:text="Tutup botol"
                    android:textColor="#4D4D4D"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="45dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="#4D4D4D"
                    android:layout_alignStart="@id/btnscan"
                    android:layout_marginTop="53dp"
                    android:layout_marginLeft="50dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textvaganza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative3"
                android:layout_marginLeft="47dp"
                android:text="Vaganza Fiesta"
                android:fontFamily="@font/montserratsemibold"
                android:textSize="18dp"
                android:textColor="#4D4D4D"/>

            <RelativeLayout
                android:id="@+id/redeem"
                android:layout_width="368dp"
                android:layout_height="140dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textvaganza"
                android:background="@drawable/kotak_vaganza"
                android:onClick="redeemvaganza">

                <ImageView
                    android:id="@+id/imgkado"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logohadiah"/>

                <TextView
                    android:id="@+id/textredeem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1A529D"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="Redeem"
                    android:textSize="22dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/imgkado"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaganza"
                    android:textColor="#18BB15"
                    android:textSize="22dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_toEndOf="@id/textredeem1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengguna aplikasi bisa melakukan penukaran\nmandiri untuk mendapatkan hadiah"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="#1A529D"
                    android:textSize="13dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/imgkado"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/extra"
                android:layout_width="368dp"
                android:layout_height="140dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/redeem"
                android:background="@drawable/kotak_vaganza"
                android:onClick="extravaganza">

                <ImageView
                    android:id="@+id/imgkado2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logohadiah"/>

                <TextView
                    android:id="@+id/textredeem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1A529D"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="Extra"
                    android:textSize="22dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/imgkado2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaganza"
                    android:textColor="#18BB15"
                    android:textSize="22dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_toEndOf="@id/textredeem2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengguna aplikasi dapat memenangkan\nundian hadiah secara reguler"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="#1A529D"
                    android:textSize="13dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/imgkado2"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/royal"
                android:layout_width="368dp"
                android:layout_height="140dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/extra"
                android:background="@drawable/kotak_vaganza">

                <ImageView
                    android:id="@+id/imgkado3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logohadiah"/>

                <TextView
                    android:id="@+id/textredeem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1A529D"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="Royal"
                    android:textSize="22dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/imgkado3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaganza"
                    android:textColor="#18BB15"
                    android:textSize="22dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_toEndOf="@id/textredeem3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengguna aplikasi dapat memenangkan\nundian hadiah royal (big prize)"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="#1A529D"
                    android:textSize="13dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/imgkado3"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_hadiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadiah Menarik"
                android:fontFamily="@font/montserratbold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_below="@id/royal"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="58dp"/>

            <RelativeLayout
                android:layout_width="368dp"
                android:layout_height="122dp"
                android:background="@drawable/bg_hadiah"
                android:layout_below="@id/text_hadiah"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_hadiah1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hadiah"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"/>

                <TextView
                    android:id="@+id/text_hadiah1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surprise Gift"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="13dp"
                    android:layout_toRightOf="@id/img_hadiah1"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/text_hadiah2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nikmati kesempatan spesial setiap bulan\nbagi 100 pengguna paling aktif kami!\nHadiah menarik menanti"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="10dp"
                    android:layout_below="@id/text_hadiah1"
                    android:layout_toRightOf="@id/img_hadiah1"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/text_hadiah3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily 10 tutup botol"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="11dp"
                    android:textColor="#1A529D"
                    android:layout_below="@id/text_hadiah2"
                    android:layout_toRightOf="@id/img_hadiah1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_plusminus"
                    android:layout_toRightOf="@id/text_hadiah3"
                    android:layout_below="@id/text_hadiah2"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="50dp">

                    <TextView
                        android:id="@+id/text_plus5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="13dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="4dp"/>

                    <Button
                        android:id="@+id/btn_plus5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/plus"/>

                    <Button
                        android:id="@+id/btn_minus5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_toRightOf="@id/btn_plus5"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/minus"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/hal_view"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_drawer"/>




</androidx.drawerlayout.widget.DrawerLayout>