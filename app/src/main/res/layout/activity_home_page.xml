                android:layout_height="wrap_content"
                android:background="@drawable/bg_food"
                android:layout_below="@id/relativetraveloka"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/text_food1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Voucher 35%"
                    android:fontFamily="@font/montserratmedium"
                    android:textSize="15dp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_food2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 Tutup Botol"
                    android:fontFamily="@font/montserratbold"
                    android:textSize="15dp"
                    android:textColor="#4D4D4D"
                    android:layout_below="@id/text_food1"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_plusminus"
                    android:layout_below="@id/text_food2"
