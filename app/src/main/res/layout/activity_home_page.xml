                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/plus"/>

                    <Button
                        android:id="@+id/btn_minus"
