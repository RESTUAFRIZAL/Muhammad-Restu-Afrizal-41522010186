                        <TextView
                            android:id="@+id/text_scan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="57dp"
                            android:layout_marginLeft="127dp"
                            android:textSize="12dp"
